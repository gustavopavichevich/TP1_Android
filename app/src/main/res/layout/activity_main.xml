<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/B_ejer_1"
        android:layout_width="334dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#095E85"
        android:onClick="Ejer_1"
        android:text="@string/boton_ejercicio1"
        android:textColor="@color/white"
        android:textColorHighlight="#B10E0E"
        android:textColorHint="#CA1212"
        android:textColorLink="#BC0B0B"
        app:iconTint="#731E18"
        app:iconTintMode="add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/B_ejer_2"
        android:layout_width="334dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#095E85"
        android:onClick="Ejer_2"
        android:text="@string/boton_ejercicio2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B_ejer_1" />

    <TextView
        android:id="@+id/textView"
